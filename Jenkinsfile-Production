pipeline {
    agent {
        dockerfile {
            filename 'docker/dockerfile-java'
            additionalBuildArgs '--build-arg JENKINS_USER_ID=`id -u jenkins` --build-arg JENKINS_GROUP_ID=`id -g jenkins`'
        }
    }

    environment {
        CONFIG = credentials('prod-config-testingplatform.properties')
        SCRIPT = credentials('prod-script-testingplatform.properties')
    }

    stages {
        stage('Configure') {
            steps {
                sh 'cat "${CONFIG}" > src/main/webapp/WEB-INF/config.properties'
                sh 'cat "${SCRIPT}" > scriptconfig.txt'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'

                sh 'rm -rf script'
                sh 'mkdir -p script'
                sh 'cp script.sh script/'
                sh 'cp scriptconfig.txt script/'
                sh 'cp -r /var/soapui/SoapUI script/SoapUI'
                sh 'zip -r testingplatform-script.zip script'
                sh 'mv testingplatform-script.zip testingplatform-script.war'
            }
        }
        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'target/testingplatform.war', onlyIfSuccessful: true
                archiveArtifacts artifacts: 'testingplatform-script.war', onlyIfSuccessful: true
            }
	    }
    }
}
