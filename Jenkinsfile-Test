pipeline {
    agent {
        dockerfile {
            filename 'docker/dockerfile-java'
            additionalBuildArgs '--build-arg JENKINS_USER_ID=`id -u jenkins` --build-arg JENKINS_GROUP_ID=`id -g jenkins`'
        }
    }

    environment {
        TESTSERVER_TOMCAT_ENDPOINT=credentials('testserver-tomcat8-url')
        TESTSERVER_TOMCAT_CREDENTIALS=credentials('testserver-tomcat8-credentials')
        CONFIG = credentials('testserver-config-testingplatform.properties')
        SCRIPT = credentials('testserver-script-testingplatform.properties')
    }

    stages { 
        stage('Configure') {
            steps {
                sh 'sed -i -e "s/<\\/settings>$//g\" ~/.m2/settings.xml'
                sh 'echo "    <servers>" >> ~/.m2/settings.xml'
                sh 'echo "        ${TESTSERVER_TOMCAT_CREDENTIALS}" >> ~/.m2/settings.xml'
                sh 'echo "    </servers>" >> ~/.m2/settings.xml'
                sh 'echo "</settings>" >> ~/.m2/settings.xml'

                sh 'cat "${CONFIG}" > src/main/webapp/WEB-INF/config.properties'
                sh 'cat "${SCRIPT}" > scriptconfig.txt'
            }
        }
        stage('Build') {
            steps {
                sh 'echo "Test"'
                //sh 'mvn clean package'
            }
        }
        stage('Deploy') {
            steps {
                //sh 'mvn tomcat:redeploy -Dmaven.tomcat.url=${TESTSERVER_TOMCAT_ENDPOINT} -Dmaven.tomcat.server=testServer'
                
                sh 'rm -rf script'
                sh 'mkdir -p script'
                sh 'cp script.sh script/'
                sh 'cp scriptconfig.txt script/'
                sh 'cp -r /var/soapui/SoapUI script/SoapUI'
                sh 'tar -czf script.tar.gz script'

                sshagent(['jenkins-ssh-key']) {
                    sh 'scp -o StrictHostKeyChecking=no script.tar.gz tomcat.testingmachine.eu:/var/testingplatform/script.tar.gz'
                    sh 'ssh -o StrictHostKeyChecking=no tomcat.testingmachine.eu "tar -xzf /var/testingplatform/script.tar.gz -C /var/testingplatform"'
                }
            }
        }
    }
}
